<div class="row mt-5">
  <div class="col-12">
    <h1>Welcome to the longest word-game!</h1>
  </div>
</div>
<div class="row mt-1">
  <div class="col-12">
    <ul id="grid">
      <% @grid.each do |letter| %>
        <li class="btn btn-primary"><%= letter %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row mt-5">
  <div class="col-7">
    <p>*****************************************************</p>
    <p>What is your longest word you can find?</p>
    <form action="/score" methor="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @grid %>
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Please type your answer" aria-label="Recipient's username" aria-describedby="basic-addon2" name ="answer">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="submit">Play</button>
        </div>
      </div>
    </form>
  </div>
</div>
